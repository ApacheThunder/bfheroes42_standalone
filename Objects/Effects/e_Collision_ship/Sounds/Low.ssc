#include ../../Common/Sounds/SoundMap.ssc

newPatch

load @ROOT/Sound/@RTD/hullcreak1.wav
randomStartPitch 0.3 / 0.0
minDistance 20
volume 1
dopplerOff
priority 2
*** Distance Volume ***
beginEffect
	controlDestination Volume
	controlSource Distance
	envelope Ramp
	param 60
	param 180
	param 1
	param -1	
endEffect

*** Speed Volume ***
beginEffect
 	controlDestination Volume
  	controlSource Extern #map<Effect::Speed>
